@using System.Diagnostics
@using ForestFires.Models;
@{
    Layout = "";
}
@model List<Sensor>
<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    <link href="~/css/header.css" rel="stylesheet" />
    <link href="~/css/status.css" rel="stylesheet" />
    <link href="~/css/map.css" rel="stylesheet" />
    <style>
        /* Always set the map height explicitly to define the size of the  div
        * element that contains the map. */
        #map {
            height: 100%;
        }
        /* Optional: Makes the sample page fill the window. */
        html, body {
            font-family: "Segoe UI";
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-style">
            <div id="site-name">
                <div id="image-svg">
                    <img src="~/images/logo.png" alt="Alternate Text" />
                </div>
                <div id="site-text">
                    Fire Monitor
                </div>
            </div>
            <div id="search-block">
                <div id="search-string">
                    <input id="input-text" type="text" name="name" value="Sample Text" />
                </div>
                <div id="search-icon">
                    <a id="find" href="#"><img src="~/images/search.png" alt="Alternate Text" /></a>
                </div>
            </div>
            <hr>
        </div>
    </header>
    <status>
        <div class="status-block">
            <div class="status-images">
                <img src="~/images/status-normal.png" alt="Status-normal" />
            </div>
            <div class="status-text">
                Normal
            </div>
        </div>

    </status>
    <google-map>
        <div id="map-block">
            <div id="map"></div>
            <div id="data-block">
                <div id="tempherature">
                    <div id="degrees">25°C</div>
                    <div id="feels-like">feels like 22°C</div>
                </div>
                <div id="weather">
                    <img class="img-about" id="img-weather" src="~/images/weather.png" alt="Alternate Text" />
                </div>
                <div id="about-info">
                    <b>Humindity</b><br />
                    30 % <br />

                    <b>Wind direction, speed & gust (mph)</b><br />
                    NW  ☺ 20 <br />
                    <b>Smoke (ppm)</b><br />
                    0.015 %
                </div>
                <div id="about-info-img">
                    <div class="info-group" id="info-group-1">
                        <div class="blue-phone-about" id="blue-phone-about-1"></div>
                        <img class="img-about" src="~/images/fire.png" alt="Alternate Text" />
                    </div>
                    <div class="info-group" id="info-group-2">
                        <div class="blue-phone-about" id="blue-phone-about-2"></div>
                        <img class="img-about" src="~/images/roads.png" alt="Alternate Text" />
                    </div>
                    <div class="info-group" id="info-group-3">
                        <div class="blue-phone-about" id="blue-phone-about-3"> </div>
                        <img class="img-about" src="~/images/fire-department.png" alt="Alternate Text" />
                    </div>
                </div>
            </div>
        </div>
    </google-map>

    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA-Ft9IBQZDBxxuuJhm5kJmm0o8-mHJ7ZU&callback=initMap"
            type="text/javascript">
    </script>
    <script>
        var map;
        $(document).ready(function () {
            initMap();
        });

        function initMap() {
            var uluru = { lat: 50.008189, lng: 36.242334 };
            map = new google.maps.Map(document.getElementById('map'),
            {
                zoom: 20,
                center: uluru,
                mapTypeId: 'hybrid'
            });
            @foreach (var sensor in Model)
            {
                <text>debugger; </text>
                <text>
            var marker = new google.maps.Marker({
                position: { lat: @sensor.Lattitude, lng: @sensor.Longtitude },
                map: map,
                title: '@sensor.Info'
            });
            </text>
            }
        }
    </script>
</body>
</html>